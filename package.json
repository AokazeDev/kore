{
  "name": "kore",
  "version": "0.0.1",
  "description": "Backend para el proyecto Kore. Construido con NestJS, PostgreSQL y Redis.",
  "author": {
    "name": "Aokaze",
    "email": "aokaze.cta@gmail.com"
  },
  "private": true,
  "license": "CC-BY-NC-ND-4.0",
  "keywords": [
    "nestjs",
    "graphql",
    "postgresql",
    "redis",
    "social-network",
    "twitter-clone",
    "fastify",
    "drizzle-orm",
    "bullmq",
    "meilisearch",
    "better-auth",
    "monorepo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AokazeDev/kore.git"
  },
  "bugs": {
    "url": "https://github.com/AokazeDev/kore/issues"
  },
  "homepage": "https://github.com/AokazeDev/kore#readme",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:e2e": "vitest run --config./apps/api/test/vitest.e2e.config.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:build": "docker-compose build",
    "clean": "rimraf dist coverage .turbo node_modules/.cache"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.940.0",
    "@aws-sdk/s3-request-presigner": "3.940.0",
    "@fastify/cookie": "11.0.2",
    "@fastify/helmet": "13.0.2",
    "@nestjs/bullmq": "11.0.4",
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "11.1.9",
    "@nestjs/graphql": "13.2.0",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/mercurius": "13.2.0",
    "@nestjs/platform-fastify": "11.1.9",
    "@nestjs/throttler": "6.4.0",
    "better-auth": "1.4.4",
    "bullmq": "5.65.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.3",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.44.7",
    "fastify": "5.6.2",
    "graphql": "16.12.0",
    "ioredis": "5.8.2",
    "meilisearch": "0.54.0",
    "mercurius": "16.6.0",
    "pg": "8.16.3",
    "pino": "10.1.0",
    "pino-pretty": "13.1.3",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@better-auth/cli": "1.4.4",
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.1",
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.9",
    "@swc/cli": "0.7.9",
    "@swc/core": "1.15.3",
    "@types/node": "22.19.1",
    "@types/pg": "8.15.6",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "4.0.14",
    "drizzle-kit": "0.31.7",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.3",
    "rimraf": "6.1.2",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0",
    "unplugin-swc": "1.5.9",
    "vitest": "4.0.14"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}